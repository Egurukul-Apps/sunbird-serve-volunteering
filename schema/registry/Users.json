{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "Users": {
      "$ref": "#/definitions/Users"
    }
  },
  "required": [
    "Users"
  ],
  "title": "Users",
  "definitions": {
    "Users": {
      "$id": "#/properties/Users",
      "type": "object",
      "title": "Users schema",
      "required": [
        "name"
      ],
      "properties": {
        "identityDetails": {
          "$ref": "#/definitions/IdentityDetails"
        },
        "contactDetails": {
          "$ref": "#/definitions/ContactDetails"
        },
        "agencyId": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "role": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "Volunteer",
              "nAdmin",
              "nCoordinator",
              "vAdmin",
              "vCoordinator"
            ]
          }
        }
      }
    },
    "IdentityDetails": {
      "$id": "#/definitions/IdentityDetails",
      "type": "object",
      "title": "Identity Details",
      "description": "Identity Details",
      "required": [],
      "properties": {
        "fullname": {
          "type": "string"
        },
        "gender": {
          "type": "string",
          "enum": [
            "Male",
            "Female",
            "Other"
          ],
          "title": "Gender"
        },
        "dob": {
          "type": "string",
          "format": "date"
        },
        "Nationality": {
          "type": "string"
        }
      }
    },
    "ContactDetails": {
      "$id": "#/definitions/ContactDetails",
      "type": "object",
      "title": "Contact Details",
      "description": "Contact Details",
      "required": [],
      "properties": {
        "email": {
          "type": "string",
          "title": "Email"
        },
        "mobile": {
          "type": "string",
          "title": "Mobile"
        },
        "address": {
          "$ref": "#/definitions/Address",
          "title": "Address"
        }
      }
    },
    "Address": {
      "type": "object",
      "required": [],
      "additionalProperties": false,
      "properties": {
        "city": {
          "type": "string",
          "title": "City"
        },
        "state": {
          "type": "string",
          "title": "State"
        },
        "country": {
          "type": "string",
          "title": "Country"
        }
      }
    }
  },
  "_osConfig": {
    "ownershipAttributes": [
      {
        "email": "/email",
        "mobile": "/phoneNumber"
      }
    ],
    "systemFields": [
      "osCreatedAt",
      "osUpdatedAt",
      "osCreatedBy",
      "osUpdatedBy"
    ],
    "inviteRoles": [
      "anonymous"
    ]
  }
}
